---
// Component that creates an interactive D3.js globe network visualization inspired by GitHub
---

<div id="globe-network" class="globe-container">
  <div class="overlay-content">
    <div id="space-invaders-prompt" class="terminal-prompt" role="dialog" aria-live="polite">
      <p>$ Enable Space Invaders mode?</p>
      <div class="terminal-actions">
        <button id="enable-space-invaders" type="button" class="terminal-button">yes</button>
        <button id="skip-space-invaders" type="button" class="terminal-button">no</button>
      </div>
    </div>

    <p id="game-status" class="game-status" hidden>Score: 0</p>

    <div class="hero-content">
      <h1>Welcome to My Portfolio</h1>
      <p class="tagline">Software Developer | Problem Solver | Tech Enthusiast</p>
      <div class="cta-buttons">
        <a href="/Portfolio/resume" class="btn btn-primary">View Resume</a>
        <a href="/Portfolio/about" class="btn btn-secondary">Learn More</a>
      </div>
    </div>
  </div>

  <div id="mobile-game-controls" class="mobile-controls" hidden>
    <button id="move-left" type="button" aria-label="Move left">◀</button>
    <button id="shoot" type="button" aria-label="Shoot">●</button>
    <button id="move-right" type="button" aria-label="Move right">▶</button>
  </div>
</div>

<style>
  .globe-container {
    width: 100%;
    height: 600px;
    background: linear-gradient(135deg, rgba(91, 124, 230, 0.08) 0%, rgba(139, 92, 246, 0.08) 100%);
    position: relative;
    overflow: hidden;
  }

  .globe-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(91, 124, 230, 0.12) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(139, 92, 246, 0.12) 0%, transparent 50%);
    pointer-events: none;
  }

  .globe-container.game-mode::before {
    background: linear-gradient(180deg, rgba(10, 20, 40, 0.5) 0%, rgba(5, 10, 25, 0.8) 100%);
  }

  .overlay-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 10;
    width: min(90%, 740px);
  }

  .overlay-content.is-game-mode {
    top: 1rem;
    left: 1rem;
    transform: none;
    text-align: left;
    width: auto;
  }

  .terminal-prompt {
    display: inline-flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
    padding: 0.75rem 0.9rem;
    border: 1px solid rgba(16, 185, 129, 0.45);
    border-radius: 0.5rem;
    background: rgba(15, 23, 42, 0.8);
    color: #bbf7d0;
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.85rem;
    backdrop-filter: blur(3px);
  }

  .terminal-prompt p {
    margin: 0;
  }

  .terminal-actions {
    display: flex;
    gap: 0.5rem;
  }

  .terminal-button {
    border: 1px solid rgba(16, 185, 129, 0.6);
    background: transparent;
    color: #86efac;
    border-radius: 0.3rem;
    padding: 0.25rem 0.6rem;
    font-family: inherit;
    font-size: 0.8rem;
    cursor: pointer;
  }

  .terminal-button:hover {
    background: rgba(16, 185, 129, 0.15);
  }

  .game-status {
    margin: 0;
    font-family: 'Courier New', Courier, monospace;
    color: #e2e8f0;
    background: rgba(15, 23, 42, 0.7);
    padding: 0.35rem 0.5rem;
    border-radius: 0.35rem;
    display: inline-block;
  }

  .hero-content {
    margin-top: 1rem;
  }

  .overlay-content h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    font-weight: 800;
    letter-spacing: -0.025em;
    color: var(--text-primary);
    line-height: 1.1;
  }

  .overlay-content .tagline {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.875rem 2rem;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    box-shadow: var(--shadow-md);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    filter: brightness(1.05);
  }

  .btn-secondary {
    background-color: var(--bg-card);
    color: var(--text-primary);
    border: 1.5px solid var(--border-light);
    box-shadow: var(--shadow-sm);
  }

  .btn-secondary:hover {
    border-color: var(--primary-color);
    color: var(--primary-color);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .mobile-controls {
    position: absolute;
    bottom: 0.8rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.75rem;
    z-index: 12;
  }

  .mobile-controls button {
    width: 3rem;
    height: 3rem;
    border-radius: 999px;
    border: 1px solid rgba(148, 163, 184, 0.8);
    background: rgba(15, 23, 42, 0.85);
    color: #e2e8f0;
    font-size: 1rem;
  }

  .terminal-prompt[hidden],
  .game-status[hidden],
  .hero-content[hidden],
  .mobile-controls[hidden] {
    display: none !important;
  }

  :global(#globe-network .particle) {
    fill-opacity: 0.7;
  }

  :global(#globe-network .connection) {
    stroke: var(--primary-color);
    stroke-opacity: 0.15;
    stroke-width: 1;
  }

  :global(#globe-network .connection.active) {
    stroke-opacity: 0.5;
    stroke-width: 2;
  }

  @media (max-width: 768px) {
    .globe-container {
      height: 500px;
    }

    .overlay-content h1 {
      font-size: 2.25rem;
    }

    .overlay-content .tagline {
      font-size: 1.125rem;
    }

    .hero-content {
      margin-top: 0.75rem;
    }
  }
</style>

<script>
  import * as d3 from 'd3';
  import { clamp, createInvaderGrid, rectanglesOverlap } from '../utils/spaceInvaders';

  interface Particle {
    id: number;
    x: number;
    y: number;
    vx: number;
    vy: number;
    radius: number;
    category: string;
  }

  interface Connection {
    source: Particle;
    target: Particle;
    distance: number;
  }

  interface Bullet {
    x: number;
    y: number;
    width: number;
    height: number;
    velocityY: number;
    isPlayerBullet: boolean;
  }

  let animationFrameId: number | null = null;
  let cleanupRuntime: (() => void) | null = null;
  let hasAnsweredSpaceInvadersPrompt = false;
  let isSpaceInvadersEnabled = false;

  function clearRuntime() {
    if (animationFrameId !== null) {
      cancelAnimationFrame(animationFrameId);
      animationFrameId = null;
    }

    if (cleanupRuntime) {
      cleanupRuntime();
      cleanupRuntime = null;
    }
  }

  function configureOverlay(container: HTMLElement, gameEnabled: boolean) {
    const overlayContent = container.querySelector('.overlay-content') as HTMLElement | null;
    const heroContent = container.querySelector('.hero-content') as HTMLElement | null;
    const promptElement = container.querySelector('#space-invaders-prompt') as HTMLElement | null;
    const gameStatus = container.querySelector('#game-status') as HTMLElement | null;

    if (!overlayContent || !heroContent || !promptElement || !gameStatus) {
      return;
    }

    if (gameEnabled) {
      container.classList.add('game-mode');
      overlayContent.classList.add('is-game-mode');
      heroContent.hidden = true;
      promptElement.hidden = true;
      gameStatus.hidden = false;
      return;
    }

    container.classList.remove('game-mode');
    overlayContent.classList.remove('is-game-mode');
    heroContent.hidden = false;
    promptElement.hidden = hasAnsweredSpaceInvadersPrompt;
    gameStatus.hidden = true;
  }

  function setupPrompt(container: HTMLElement) {
    const enableButton = document.getElementById('enable-space-invaders');
    const skipButton = document.getElementById('skip-space-invaders');

    if (!(enableButton instanceof HTMLButtonElement) || !(skipButton instanceof HTMLButtonElement)) {
      return;
    }

    enableButton.onclick = () => {
      hasAnsweredSpaceInvadersPrompt = true;
      isSpaceInvadersEnabled = true;
      initVisualization();
    };

    skipButton.onclick = () => {
      hasAnsweredSpaceInvadersPrompt = true;
      isSpaceInvadersEnabled = false;
      configureOverlay(container, false);
    };
  }

  function initGlobeVisualization(container: HTMLElement) {
    configureOverlay(container, false);

    const width = container.clientWidth;
    const height = container.clientHeight;
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || window.innerWidth < 768;
    const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;

    const svg = d3.select(container)
      .append('svg')
      .attr('width', width)
      .attr('height', height)
      .attr('style', 'position: absolute; top: 0; left: 0;');

    const numParticles = isMobile ? 35 : 80;
    const particles: Particle[] = [];
    const categories = ['frontend', 'backend', 'tools', 'cloud'];
    const categoryColors: Record<string, string> = {
      frontend: '#5b7ce6',
      backend: '#8b5cf6',
      tools: '#06b6d4',
      cloud: '#10b981'
    };

    for (let i = 0; i < numParticles; i++) {
      const angle = (i / numParticles) * Math.PI * 2;
      const centerX = width / 2;
      const centerY = height / 2;
      const z = Math.random() * 2 - 1;
      const circleRadius = Math.sqrt(1 - z * z);

      particles.push({
        id: i,
        x: centerX + Math.cos(angle) * circleRadius * width * 0.4,
        y: centerY + Math.sin(angle) * circleRadius * height * 0.35 + z * height * 0.1,
        vx: (Math.random() - 0.5) * 0.3,
        vy: (Math.random() - 0.5) * 0.3,
        radius: Math.random() * 2 + 2,
        category: categories[Math.floor(Math.random() * categories.length)]
      });
    }

    function calculateConnections(): Connection[] {
      const connections: Connection[] = [];
      const maxDistance = isMobile ? 120 : 150;
      const maxConnectionsPerParticle = isMobile ? 3 : 5;

      for (let i = 0; i < particles.length; i++) {
        let connectionCount = 0;
        for (let j = i + 1; j < particles.length; j++) {
          if (connectionCount >= maxConnectionsPerParticle) break;

          const dx = particles[i].x - particles[j].x;
          const dy = particles[i].y - particles[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < maxDistance) {
            connections.push({
              source: particles[i],
              target: particles[j],
              distance: distance
            });
            connectionCount++;
          }
        }
      }

      return connections;
    }

    let connections = calculateConnections();
    const connectionGroup = svg.append('g');

    function updateConnections() {
      connections = calculateConnections();

      const lines = connectionGroup
        .selectAll('line')
        .data(connections, (d: any) => `${d.source.id}-${d.target.id}`);

      lines.exit().remove();

      lines
        .enter()
        .append('line')
        .attr('class', 'connection')
        .merge(lines as any)
        .attr('x1', (d: Connection) => d.source.x)
        .attr('y1', (d: Connection) => d.source.y)
        .attr('x2', (d: Connection) => d.target.x)
        .attr('y2', (d: Connection) => d.target.y)
        .attr('stroke-opacity', (d: Connection) => Math.max(0, 1 - d.distance / 150));
    }

    const particleGroup = svg.append('g');

    const particleElements = particleGroup
      .selectAll('circle')
      .data(particles)
      .enter()
      .append('circle')
      .attr('class', 'particle')
      .attr('r', (d: Particle) => d.radius)
      .attr('cx', (d: Particle) => d.x)
      .attr('cy', (d: Particle) => d.y)
      .attr('fill', (d: Particle) => categoryColors[d.category])
      .style('filter', isMobile ? 'none' : 'drop-shadow(0 0 3px rgba(255, 255, 255, 0.5))');

    let lastFrameTime = 0;
    const targetFrameTime = isMobile ? 1000 / 30 : 1000 / 60;

    function animate(currentTime: number = 0) {
      if (!prefersReducedMotion) {
        const elapsed = currentTime - lastFrameTime;

        if (elapsed >= targetFrameTime) {
          lastFrameTime = currentTime - (elapsed % targetFrameTime);

          particles.forEach((particle: Particle) => {
            particle.x += particle.vx;
            particle.y += particle.vy;

            const padding = 50;
            if (particle.x < padding || particle.x > width - padding) particle.vx *= -1;
            if (particle.y < padding || particle.y > height - padding) particle.vy *= -1;

            particle.vx += (Math.random() - 0.5) * 0.02;
            particle.vy += (Math.random() - 0.5) * 0.02;

            const maxVel = 0.5;
            particle.vx = Math.max(-maxVel, Math.min(maxVel, particle.vx));
            particle.vy = Math.max(-maxVel, Math.min(maxVel, particle.vy));
          });

          particleElements
            .attr('cx', (d: Particle) => d.x)
            .attr('cy', (d: Particle) => d.y);

          if (!isMobile || Math.floor(currentTime / targetFrameTime) % 3 === 0) {
            updateConnections();
          }
        }
      }

      animationFrameId = requestAnimationFrame(animate);
    }

    updateConnections();

    if (!prefersReducedMotion) {
      animate();
    }

    if (!isTouchDevice) {
      particleElements.on('mouseenter', function(_event: MouseEvent, particle: Particle) {
        connectionGroup.selectAll('line')
          .classed('active', (conn: any) => conn.source.id === particle.id || conn.target.id === particle.id);
      });

      particleElements.on('mouseleave', function() {
        connectionGroup.selectAll('line').classed('active', false);
      });
    }
  }

  function initSpaceInvadersGame(container: HTMLElement) {
    configureOverlay(container, true);

    const gameStatus = container.querySelector('#game-status') as HTMLElement | null;
    const mobileControls = container.querySelector('#mobile-game-controls') as HTMLElement | null;
    const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;

    if (mobileControls) {
      mobileControls.hidden = !(isTouchDevice || window.innerWidth < 768);
    }

    const width = container.clientWidth;
    const height = container.clientHeight;

    const svg = d3.select(container)
      .append('svg')
      .attr('width', width)
      .attr('height', height)
      .attr('style', 'position: absolute; top: 0; left: 0;')
      .attr('aria-label', 'Space Invaders mini game');

    const player = {
      x: width / 2 - 24,
      y: height - 56,
      width: 48,
      height: 12,
      speed: isTouchDevice ? 7 : 8
    };

    const controlState = {
      moveLeft: false,
      moveRight: false,
      shoot: false
    };

    const bullets: Bullet[] = [];
    const invaders = createInvaderGrid(width, 70);
    let invaderDirection = 1;
    let lastPlayerShot = 0;
    let lastInvaderShot = 0;
    let score = 0;
    let gameOverMessage = '';

    const stars = Array.from({ length: 70 }, (_, index) => ({
      id: index,
      x: Math.random() * width,
      y: Math.random() * height,
      r: Math.random() * 1.4 + 0.4,
    }));

    svg.append('g')
      .selectAll('circle')
      .data(stars)
      .enter()
      .append('circle')
      .attr('cx', (star) => star.x)
      .attr('cy', (star) => star.y)
      .attr('r', (star) => star.r)
      .attr('fill', 'rgba(226, 232, 240, 0.4)');

    const invaderLayer = svg.append('g');
    const bulletLayer = svg.append('g');
    const playerLayer = svg.append('g');

    function updateGameStatus() {
      if (!gameStatus) {
        return;
      }

      gameStatus.textContent = gameOverMessage ? `${gameOverMessage} | Score: ${score}` : `Score: ${score}`;
    }

    function shootPlayerBullet() {
      bullets.push({
        x: player.x + player.width / 2 - 2,
        y: player.y - 10,
        width: 4,
        height: 10,
        velocityY: -9,
        isPlayerBullet: true,
      });
    }

    function shootInvaderBullet() {
      const aliveInvaders = invaders.filter((invader) => invader.isAlive);
      if (aliveInvaders.length === 0) {
        return;
      }

      const shooter = aliveInvaders[Math.floor(Math.random() * aliveInvaders.length)];
      bullets.push({
        x: shooter.x + shooter.width / 2 - 2,
        y: shooter.y + shooter.height,
        width: 6,
        height: 10,
        velocityY: 4.5,
        isPlayerBullet: false,
      });
    }

    function render() {
      const aliveInvaders = invaders.filter((invader) => invader.isAlive);

      const invaderSelection = invaderLayer
        .selectAll('rect')
        .data(aliveInvaders, (invader: any) => invader.id);

      invaderSelection.exit().remove();

      invaderSelection
        .enter()
        .append('rect')
        .attr('rx', 2)
        .attr('ry', 2)
        .attr('fill', '#93c5fd')
        .attr('stroke', '#1d4ed8')
        .merge(invaderSelection as any)
        .attr('x', (invader) => invader.x)
        .attr('y', (invader) => invader.y)
        .attr('width', (invader) => invader.width)
        .attr('height', (invader) => invader.height);

      const bulletSelection = bulletLayer
        .selectAll('rect')
        .data(bullets, (_bullet, index) => index);

      bulletSelection.exit().remove();

      bulletSelection
        .enter()
        .append('rect')
        .merge(bulletSelection as any)
        .attr('x', (bullet) => bullet.x)
        .attr('y', (bullet) => bullet.y)
        .attr('width', (bullet) => bullet.width)
        .attr('height', (bullet) => bullet.height)
        .attr('rx', (bullet) => bullet.isPlayerBullet ? 0 : 2)
        .attr('fill', (bullet) => bullet.isPlayerBullet ? '#86efac' : '#fca5a5');

      const playerSelection = playerLayer.selectAll('rect').data([player]);
      playerSelection
        .enter()
        .append('rect')
        .attr('rx', 2)
        .attr('ry', 2)
        .attr('fill', '#34d399')
        .attr('stroke', '#065f46')
        .merge(playerSelection as any)
        .attr('x', player.x)
        .attr('y', player.y)
        .attr('width', player.width)
        .attr('height', player.height);
    }

    function animate(now: number) {
      if (gameOverMessage) {
        updateGameStatus();
        render();
        return;
      }

      if (controlState.moveLeft) {
        player.x -= player.speed;
      }

      if (controlState.moveRight) {
        player.x += player.speed;
      }

      player.x = clamp(player.x, 0, width - player.width);

      if (controlState.shoot && now - lastPlayerShot > 250) {
        shootPlayerBullet();
        lastPlayerShot = now;
      }

      const aliveInvaders = invaders.filter((invader) => invader.isAlive);
      const horizontalMove = 1.2 * invaderDirection;
      let reachedEdge = false;

      aliveInvaders.forEach((invader) => {
        invader.x += horizontalMove;
        if (invader.x <= 0 || invader.x + invader.width >= width) {
          reachedEdge = true;
        }
      });

      if (reachedEdge) {
        invaderDirection *= -1;
        aliveInvaders.forEach((invader) => {
          invader.y += 18;
        });
      }

      if (now - lastInvaderShot > 900) {
        shootInvaderBullet();
        lastInvaderShot = now;
      }

      bullets.forEach((bullet) => {
        bullet.y += bullet.velocityY;
      });

      for (let index = bullets.length - 1; index >= 0; index--) {
        const bullet = bullets[index];

        if (bullet.y + bullet.height < 0 || bullet.y > height) {
          bullets.splice(index, 1);
          continue;
        }

        if (bullet.isPlayerBullet) {
          const hitInvader = invaders.find((invader) => {
            if (!invader.isAlive) {
              return false;
            }

            return rectanglesOverlap(bullet, invader);
          });

          if (hitInvader) {
            hitInvader.isAlive = false;
            bullets.splice(index, 1);
            score += 10;
          }
          continue;
        }

        if (rectanglesOverlap(bullet, player)) {
          bullets.splice(index, 1);
          gameOverMessage = 'Game Over';
        }
      }

      const hasInvaderReachedPlayer = invaders.some((invader) => invader.isAlive && invader.y + invader.height >= player.y);
      const hasClearedAllInvaders = invaders.every((invader) => !invader.isAlive);

      if (hasInvaderReachedPlayer) {
        gameOverMessage = 'Game Over';
      } else if (hasClearedAllInvaders) {
        gameOverMessage = 'You Win';
      }

      updateGameStatus();
      render();
      animationFrameId = requestAnimationFrame(animate);
    }

    function setControl(control: 'moveLeft' | 'moveRight' | 'shoot', value: boolean) {
      controlState[control] = value;
    }

    const keyDownListener = (event: KeyboardEvent) => {
      if (event.key === 'ArrowLeft') {
        setControl('moveLeft', true);
      }

      if (event.key === 'ArrowRight') {
        setControl('moveRight', true);
      }

      if (event.key === ' ') {
        event.preventDefault();
        setControl('shoot', true);
      }
    };

    const keyUpListener = (event: KeyboardEvent) => {
      if (event.key === 'ArrowLeft') {
        setControl('moveLeft', false);
      }

      if (event.key === 'ArrowRight') {
        setControl('moveRight', false);
      }

      if (event.key === ' ') {
        setControl('shoot', false);
      }
    };

    const leftButton = document.getElementById('move-left');
    const rightButton = document.getElementById('move-right');
    const shootButton = document.getElementById('shoot');

    const bindPointerControl = (element: HTMLElement | null, control: 'moveLeft' | 'moveRight' | 'shoot') => {
      if (!element) {
        return () => {};
      }

      const start = (event: Event) => {
        event.preventDefault();
        setControl(control, true);
      };

      const end = (event: Event) => {
        event.preventDefault();
        setControl(control, false);
      };

      element.addEventListener('touchstart', start, { passive: false });
      element.addEventListener('touchend', end, { passive: false });
      element.addEventListener('mousedown', start);
      element.addEventListener('mouseup', end);
      element.addEventListener('mouseleave', end);

      return () => {
        element.removeEventListener('touchstart', start);
        element.removeEventListener('touchend', end);
        element.removeEventListener('mousedown', start);
        element.removeEventListener('mouseup', end);
        element.removeEventListener('mouseleave', end);
      };
    };

    const releaseLeftControl = bindPointerControl(leftButton as HTMLElement | null, 'moveLeft');
    const releaseRightControl = bindPointerControl(rightButton as HTMLElement | null, 'moveRight');
    const releaseShootControl = bindPointerControl(shootButton as HTMLElement | null, 'shoot');

    window.addEventListener('keydown', keyDownListener);
    window.addEventListener('keyup', keyUpListener);

    cleanupRuntime = () => {
      window.removeEventListener('keydown', keyDownListener);
      window.removeEventListener('keyup', keyUpListener);
      releaseLeftControl();
      releaseRightControl();
      releaseShootControl();

      if (mobileControls) {
        mobileControls.hidden = true;
      }
    };

    updateGameStatus();
    render();
    animationFrameId = requestAnimationFrame(animate);
  }

  function initVisualization() {
    const container = document.getElementById('globe-network');
    if (!container) {
      return;
    }

    clearRuntime();
    d3.select(container).selectAll('svg').remove();
    setupPrompt(container);

    if (isSpaceInvadersEnabled) {
      initSpaceInvadersGame(container);
      return;
    }

    initGlobeVisualization(container);
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initVisualization);
  } else {
    initVisualization();
  }

  let resizeTimer: ReturnType<typeof setTimeout>;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(initVisualization, 250);
  });
</script>
