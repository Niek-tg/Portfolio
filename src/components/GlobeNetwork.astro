---
// Component that creates an interactive D3.js globe network visualization inspired by GitHub
---

<div id="globe-network" class="globe-container">
  <div class="overlay-content">
    <div class="hero-content">
      <h1>Welcome to My Portfolio</h1>
      <p class="tagline">Software Developer | Problem Solver | Tech Enthusiast</p>
      <div class="cta-buttons">
        <a href="/Portfolio/resume" class="btn btn-primary">View Resume</a>
        <a href="/Portfolio/about" class="btn btn-secondary">Learn More</a>
      </div>
    </div>
  </div>
</div>

<style>
  .globe-container {
    width: 100%;
    height: 600px;
    background: linear-gradient(135deg, rgba(91, 124, 230, 0.08) 0%, rgba(139, 92, 246, 0.08) 100%);
    position: relative;
    overflow: hidden;
  }

  .globe-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(91, 124, 230, 0.12) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(139, 92, 246, 0.12) 0%, transparent 50%);
    pointer-events: none;
  }

  .overlay-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 10;
    width: min(90%, 740px);
  }

  .hero-content {
    margin-top: 1rem;
  }

  .overlay-content h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    font-weight: 800;
    letter-spacing: -0.025em;
    color: var(--text-primary);
    line-height: 1.1;
  }

  .overlay-content .tagline {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.875rem 2rem;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    box-shadow: var(--shadow-md);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    filter: brightness(1.05);
  }

  .btn-secondary {
    background-color: var(--bg-card);
    color: var(--text-primary);
    border: 1.5px solid var(--border-light);
    box-shadow: var(--shadow-sm);
  }

  .btn-secondary:hover {
    border-color: var(--primary-color);
    color: var(--primary-color);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  :global(#globe-network .particle) {
    fill-opacity: 0.7;
  }

  :global(#globe-network .connection) {
    stroke: var(--primary-color);
    stroke-opacity: 0.15;
    stroke-width: 1;
  }

  :global(#globe-network .connection.active) {
    stroke-opacity: 0.5;
    stroke-width: 2;
  }

  @media (max-width: 768px) {
    .globe-container {
      height: 500px;
    }

    .overlay-content h1 {
      font-size: 2.25rem;
    }

    .overlay-content .tagline {
      font-size: 1.125rem;
    }

    .hero-content {
      margin-top: 0.75rem;
    }
  }
</style>

<script>
  import * as d3 from 'd3';

  interface Particle {
    id: number;
    x: number;
    y: number;
    vx: number;
    vy: number;
    radius: number;
    category: string;
  }

  interface Connection {
    source: Particle;
    target: Particle;
    distance: number;
  }

  let animationFrameId: number | null = null;

  function clearRuntime() {
    if (animationFrameId !== null) {
      cancelAnimationFrame(animationFrameId);
      animationFrameId = null;
    }
  }

  function initGlobeVisualization(container: HTMLElement) {
    const width = container.clientWidth;
    const height = container.clientHeight;
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || window.innerWidth < 768;
    const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;

    const svg = d3.select(container)
      .append('svg')
      .attr('width', width)
      .attr('height', height)
      .attr('style', 'position: absolute; top: 0; left: 0;');

    const numParticles = isMobile ? 35 : 80;
    const particles: Particle[] = [];
    const categories = ['frontend', 'backend', 'tools', 'cloud'];
    const categoryColors: Record<string, string> = {
      frontend: '#5b7ce6',
      backend: '#8b5cf6',
      tools: '#06b6d4',
      cloud: '#10b981'
    };

    for (let i = 0; i < numParticles; i++) {
      const angle = (i / numParticles) * Math.PI * 2;
      const centerX = width / 2;
      const centerY = height / 2;
      const z = Math.random() * 2 - 1;
      const circleRadius = Math.sqrt(1 - z * z);

      particles.push({
        id: i,
        x: centerX + Math.cos(angle) * circleRadius * width * 0.4,
        y: centerY + Math.sin(angle) * circleRadius * height * 0.35 + z * height * 0.1,
        vx: (Math.random() - 0.5) * 0.3,
        vy: (Math.random() - 0.5) * 0.3,
        radius: Math.random() * 2 + 2,
        category: categories[Math.floor(Math.random() * categories.length)]
      });
    }

    function calculateConnections(): Connection[] {
      const connections: Connection[] = [];
      const maxDistance = isMobile ? 120 : 150;
      const maxConnectionsPerParticle = isMobile ? 3 : 5;

      for (let i = 0; i < particles.length; i++) {
        let connectionCount = 0;
        for (let j = i + 1; j < particles.length; j++) {
          if (connectionCount >= maxConnectionsPerParticle) break;

          const dx = particles[i].x - particles[j].x;
          const dy = particles[i].y - particles[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < maxDistance) {
            connections.push({
              source: particles[i],
              target: particles[j],
              distance: distance
            });
            connectionCount++;
          }
        }
      }

      return connections;
    }

    let connections = calculateConnections();
    const connectionGroup = svg.append('g');

    function updateConnections() {
      connections = calculateConnections();

      const lines = connectionGroup
        .selectAll('line')
        .data(connections, (d: any) => `${d.source.id}-${d.target.id}`);

      lines.exit().remove();

      lines
        .enter()
        .append('line')
        .attr('class', 'connection')
        .merge(lines as any)
        .attr('x1', (d: Connection) => d.source.x)
        .attr('y1', (d: Connection) => d.source.y)
        .attr('x2', (d: Connection) => d.target.x)
        .attr('y2', (d: Connection) => d.target.y)
        .attr('stroke-opacity', (d: Connection) => Math.max(0, 1 - d.distance / 150));
    }

    const particleGroup = svg.append('g');

    const particleElements = particleGroup
      .selectAll('circle')
      .data(particles)
      .enter()
      .append('circle')
      .attr('class', 'particle')
      .attr('r', (d: Particle) => d.radius)
      .attr('cx', (d: Particle) => d.x)
      .attr('cy', (d: Particle) => d.y)
      .attr('fill', (d: Particle) => categoryColors[d.category])
      .style('filter', isMobile ? 'none' : 'drop-shadow(0 0 3px rgba(255, 255, 255, 0.5))');

    let lastFrameTime = 0;
    const targetFrameTime = isMobile ? 1000 / 30 : 1000 / 60;

    function animate(currentTime: number = 0) {
      if (!prefersReducedMotion) {
        const elapsed = currentTime - lastFrameTime;

        if (elapsed >= targetFrameTime) {
          lastFrameTime = currentTime - (elapsed % targetFrameTime);

          particles.forEach((particle: Particle) => {
            particle.x += particle.vx;
            particle.y += particle.vy;

            const padding = 50;
            if (particle.x < padding || particle.x > width - padding) particle.vx *= -1;
            if (particle.y < padding || particle.y > height - padding) particle.vy *= -1;

            particle.vx += (Math.random() - 0.5) * 0.02;
            particle.vy += (Math.random() - 0.5) * 0.02;

            const maxVel = 0.5;
            particle.vx = Math.max(-maxVel, Math.min(maxVel, particle.vx));
            particle.vy = Math.max(-maxVel, Math.min(maxVel, particle.vy));
          });

          particleElements
            .attr('cx', (d: Particle) => d.x)
            .attr('cy', (d: Particle) => d.y);

          if (!isMobile || Math.floor(currentTime / targetFrameTime) % 3 === 0) {
            updateConnections();
          }
        }
      }

      animationFrameId = requestAnimationFrame(animate);
    }

    updateConnections();

    if (!prefersReducedMotion) {
      animate();
    }

    if (!isTouchDevice) {
      particleElements.on('mouseenter', function(_event: MouseEvent, particle: Particle) {
        connectionGroup.selectAll('line')
          .classed('active', (conn: any) => conn.source.id === particle.id || conn.target.id === particle.id);
      });

      particleElements.on('mouseleave', function() {
        connectionGroup.selectAll('line').classed('active', false);
      });
    }
  }

  function initVisualization() {
    const container = document.getElementById('globe-network');
    if (!container) {
      return;
    }

    clearRuntime();
    d3.select(container).selectAll('svg').remove();
    initGlobeVisualization(container);
  }

  function initVisualizationWithErrorHandling() {
    try {
      initVisualization();
    } catch (error) {
      console.error('Failed to initialize visualization', error);
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initVisualizationWithErrorHandling();
    });
  } else {
    initVisualizationWithErrorHandling();
  }

  let resizeTimer: ReturnType<typeof setTimeout>;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(() => {
      initVisualizationWithErrorHandling();
    }, 250);
  });
</script>
