---
// Component that creates an interactive D3.js globe network visualization inspired by GitHub
---

<div id="globe-network" class="globe-container">
  <div class="overlay-content">
    <h1>Welcome to My Portfolio</h1>
    <p class="tagline">Software Developer | Problem Solver | Tech Enthusiast</p>
    <div class="cta-buttons">
      <a href="/Portfolio/resume" class="btn btn-primary">View Resume</a>
      <a href="/Portfolio/about" class="btn btn-secondary">Learn More</a>
    </div>
  </div>
</div>

<style>
  .globe-container {
    width: 100%;
    height: 600px;
    background: linear-gradient(135deg, #0d1117 0%, #161b22 50%, #1a1f2e 100%);
    position: relative;
    overflow: hidden;
  }

  .overlay-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 10;
    color: white;
  }

  .overlay-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
  }

  .overlay-content .tagline {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    opacity: 0.95;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
    display: inline-block;
  }

  .btn-primary {
    background-color: white;
    color: #2563eb;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(255, 255, 255, 0.2);
  }

  .btn-secondary {
    background-color: transparent;
    color: white;
    border: 2px solid white;
  }

  .btn-secondary:hover {
    background-color: white;
    color: #2563eb;
  }

  :global(.particle) {
    fill: rgba(255, 255, 255, 0.8);
  }

  :global(.connection) {
    stroke: rgba(100, 150, 255, 0.3);
    stroke-width: 1;
  }

  :global(.connection.active) {
    stroke: rgba(100, 150, 255, 0.8);
    stroke-width: 2;
  }

  @media (max-width: 768px) {
    .globe-container {
      height: 500px;
    }

    .overlay-content h1 {
      font-size: 2rem;
    }

    .overlay-content .tagline {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  import * as d3 from 'd3';

  interface Particle {
    id: number;
    x: number;
    y: number;
    vx: number;
    vy: number;
    radius: number;
    category: string;
  }

  interface Connection {
    source: Particle;
    target: Particle;
    distance: number;
  }

  function initGlobeVisualization() {
    const container = document.getElementById('globe-network');
    if (!container) return;

    // Clear any existing SVG
    d3.select(container).selectAll('svg').remove();

    const width = container.clientWidth;
    const height = container.clientHeight;

    // Create SVG
    const svg = d3.select(container)
      .append('svg')
      .attr('width', width)
      .attr('height', height)
      .attr('style', 'position: absolute; top: 0; left: 0;');

    // Create particles representing skills/technologies scattered across the "globe"
    const numParticles = 80;
    const particles: Particle[] = [];
    
    // Skill categories for coloring
    const categories = ['frontend', 'backend', 'tools', 'cloud'];
    const categoryColors: Record<string, string> = {
      frontend: '#667eea',
      backend: '#f59e0b',
      tools: '#10b981',
      cloud: '#3b82f6'
    };

    // Create particles with curved distribution (simulate sphere projection)
    for (let i = 0; i < numParticles; i++) {
      const angle = (i / numParticles) * Math.PI * 2;
      const centerX = width / 2;
      const centerY = height / 2;
      
      // Create a 3D-like distribution
      const z = Math.random() * 2 - 1; // -1 to 1
      const circleRadius = Math.sqrt(1 - z * z);
      
      particles.push({
        id: i,
        x: centerX + Math.cos(angle) * circleRadius * width * 0.4,
        y: centerY + Math.sin(angle) * circleRadius * height * 0.35 + z * height * 0.1,
        vx: (Math.random() - 0.5) * 0.3,
        vy: (Math.random() - 0.5) * 0.3,
        radius: Math.random() * 2 + 2,
        category: categories[Math.floor(Math.random() * categories.length)]
      });
    }

    // Calculate connections between nearby particles
    function calculateConnections(): Connection[] {
      const connections: Connection[] = [];
      const maxDistance = 150;

      for (let i = 0; i < particles.length; i++) {
        for (let j = i + 1; j < particles.length; j++) {
          const dx = particles[i].x - particles[j].x;
          const dy = particles[i].y - particles[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < maxDistance) {
            connections.push({
              source: particles[i],
              target: particles[j],
              distance: distance
            });
          }
        }
      }

      return connections;
    }

    // Initial connections
    let connections = calculateConnections();

    // Create connection lines
    const connectionGroup = svg.append('g');
    
    function updateConnections() {
      connections = calculateConnections();
      
      const lines = connectionGroup
        .selectAll('line')
        .data(connections, (d: any) => `${d.source.id}-${d.target.id}`);

      lines.exit().remove();

      lines
        .enter()
        .append('line')
        .attr('class', 'connection')
        .merge(lines as any)
        .attr('x1', (d: Connection) => d.source.x)
        .attr('y1', (d: Connection) => d.source.y)
        .attr('x2', (d: Connection) => d.target.x)
        .attr('y2', (d: Connection) => d.target.y)
        .attr('opacity', (d: Connection) => Math.max(0, 1 - d.distance / 150));
    }

    // Create particles
    const particleGroup = svg.append('g');
    
    const particleElements = particleGroup
      .selectAll('circle')
      .data(particles)
      .enter()
      .append('circle')
      .attr('class', 'particle')
      .attr('r', (d: Particle) => d.radius)
      .attr('cx', (d: Particle) => d.x)
      .attr('cy', (d: Particle) => d.y)
      .attr('fill', (d: Particle) => categoryColors[d.category])
      .style('filter', 'drop-shadow(0 0 3px rgba(255, 255, 255, 0.5))');

    // Animation loop
    function animate() {
      // Update particle positions with smooth floating motion
      particles.forEach((p: Particle) => {
        p.x += p.vx;
        p.y += p.vy;

        // Bounce off edges with some padding
        const padding = 50;
        if (p.x < padding || p.x > width - padding) p.vx *= -1;
        if (p.y < padding || p.y > height - padding) p.vy *= -1;

        // Add slight random drift
        p.vx += (Math.random() - 0.5) * 0.02;
        p.vy += (Math.random() - 0.5) * 0.02;

        // Limit velocity
        const maxVel = 0.5;
        p.vx = Math.max(-maxVel, Math.min(maxVel, p.vx));
        p.vy = Math.max(-maxVel, Math.min(maxVel, p.vy));
      });

      // Update visual positions
      particleElements
        .attr('cx', (d: Particle) => d.x)
        .attr('cy', (d: Particle) => d.y);

      updateConnections();

      requestAnimationFrame(animate);
    }

    // Start animation
    animate();

    // Add interaction - highlight connections on hover
    particleElements.on('mouseenter', function(_event: MouseEvent, d: Particle) {
      connectionGroup.selectAll('line')
        .classed('active', (conn: any) => 
          conn.source.id === d.id || conn.target.id === d.id
        );
    });

    particleElements.on('mouseleave', function() {
      connectionGroup.selectAll('line').classed('active', false);
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initGlobeVisualization);
  } else {
    initGlobeVisualization();
  }

  // Reinitialize on window resize
  let resizeTimer: ReturnType<typeof setTimeout>;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(initGlobeVisualization, 250);
  });
</script>
