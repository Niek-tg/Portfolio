---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home - Portfolio">
  <section class="hero">
    <div class="container">
      <h1>Welcome to My Portfolio</h1>
      <p class="tagline">Software Developer | Problem Solver | Tech Enthusiast</p>
      <div class="cta-buttons">
        <a href="/Portfolio/resume" class="btn btn-primary">View Resume</a>
        <a href="/Portfolio/about" class="btn btn-secondary">Learn More</a>
      </div>
    </div>
  </section>

  <section class="featured">
    <div class="container">
      <h2>Skills & Expertise</h2>
      <div class="skills-grid">
        <div class="skill-card">
          <h3>Frontend Development</h3>
          <p>HTML, CSS, JavaScript, TypeScript, React, Astro</p>
        </div>
        <div class="skill-card">
          <h3>Backend Development</h3>
          <p>Node.js, Python, REST APIs, Database Design</p>
        </div>
        <div class="skill-card">
          <h3>Tools & Technologies</h3>
          <p>Git, GitHub Actions, Docker, CI/CD, Cloud Platforms</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
